generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  passwordHash String

  tokens       UserToken[]
  requests     Request[]

  // ✅ novo: 1 usuário pode (ou não) ser prestador
  provider     Provider?

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model UserToken {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      String    @default("auth")
  hash      String    @unique
  expiresAt DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@index([hash, type])
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique

  requests  Request[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([slug])
}

enum RequestStatus {
  requested
  matched
  scheduled
  in_progress
  delivered
  completed
  canceled
}

model Request {
  id          String        @id @default(cuid())

  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId  String
  category    Category      @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  title       String
  description String

  status      RequestStatus @default(requested)

  // ✅ novo: um pedido pode ter várias propostas
  proposals   Proposal[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([status])
}

//
// ============================
// ✅ NOVO: Prestadores
// ============================
//

model Provider {
  id          String    @id @default(cuid())

  // 1 provider por usuário (trava forte)
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // dados básicos do prestador (MVP)
  description String?
  rating      Float     @default(5)
  isActive    Boolean   @default(true)

  // um prestador pode enviar várias propostas
  proposals   Proposal[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([isActive])
}

enum ProposalStatus {
  sent
  accepted
  rejected
  canceled
}

model Proposal {
  id         String         @id @default(cuid())

  requestId  String
  request    Request        @relation(fields: [requestId], references: [id], onDelete: Cascade)

  providerId String
  provider   Provider       @relation(fields: [providerId], references: [id], onDelete: Cascade)

  // preço e mensagem
  price      Decimal?       @db.Decimal(10, 2)
  message    String
  status     ProposalStatus @default(sent)

  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  // ✅ trava: mesmo prestador não manda 2 propostas pro mesmo pedido
  @@unique([requestId, providerId])

  @@index([requestId])
  @@index([providerId])
  @@index([status])
}
